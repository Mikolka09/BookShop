@model SelectModelBooksShops

@{
    ViewData["Title"] = "Sales";
}

<h1>Sales</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead style="background-color:antiquewhite">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesList.FirstOrDefault().BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesList.FirstOrDefault().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesList.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesList.FirstOrDefault().SaleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesList.FirstOrDefault().ShopId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalesList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.BooksList.FirstOrDefault(p => p.Id == item.BookId).Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price, "Price")  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate, "Date")
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ShopsList.FirstOrDefault(p=>p.Id == item.ShopId).Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
